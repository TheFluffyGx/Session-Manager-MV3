{
  "manifest_version": 3,
  "name": "Session Manager MV3",
  "version": "1.0.0",
  "description": "Save and restore window sessions (tabs + tab groups).",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Session Manager MV3"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "tabGroups",
    "scripting",
    "downloads",
    "windows"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}